---
import '../../styles/global.css';

export interface Props {
  title: string;
  description?: string;
  image?: string;
}

const {
  title,
  description = "Sora2Code.com - Latest Sora invite codes, real-time updates from Reddit & Twitter, get OpenAI Sora2 Access",
  image = "/og-image.jpg"
} = Astro.props;

// Safe URL construction for canonical URL
let canonicalURL: URL;
try {
  if (Astro.site) {
    canonicalURL = new URL(Astro.url.pathname, Astro.site);
  } else {
    canonicalURL = new URL(Astro.url.pathname, 'http://localhost:4321');
  }
} catch (error) {
  // Fallback to localhost if URL construction fails
  canonicalURL = new URL('/', 'http://localhost:4321');
}
