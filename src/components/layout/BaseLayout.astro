    <!-- Theme toggle and mobile menu script -->
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        // Theme toggle
        const themeToggle = document.getElementById('theme-toggle');
        const html = document.documentElement;
        const sunIcon = themeToggle?.querySelector('.sun');
        const moonIcon = themeToggle?.querySelector('.moon');

        function updateThemeIcon(isDark: boolean) {
          if (sunIcon && moonIcon) {
            if (isDark) {
              (sunIcon as HTMLElement).style.display = 'none';
              (moonIcon as HTMLElement).style.display = 'block';
            } else {
              (sunIcon as HTMLElement).style.display = 'block';
              (moonIcon as HTMLElement).style.display = 'none';
            }
          }
        }

        // Initialize theme icons
        updateThemeIcon(html.classList.contains('dark'));

        themeToggle?.addEventListener('click', function() {
          const isDark = html.classList.toggle('dark');
          localStorage.setItem('theme', isDark ? 'dark' : 'light');
          updateThemeIcon(isDark);
        });

        // Mobile menu toggle
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        const menuIcon = mobileMenuButton?.querySelector('.menu-icon');
        const closeIcon = mobileMenuButton?.querySelector('.close-icon');

        mobileMenuButton?.addEventListener('click', function() {
          const isHidden = mobileMenu?.classList.contains('hidden');

          if (isHidden) {
            mobileMenu?.classList.remove('hidden');
            (menuIcon as HTMLElement).style.display = 'none';
            (closeIcon as HTMLElement).style.display = 'block';
          } else {
            mobileMenu?.classList.add('hidden');
            (menuIcon as HTMLElement).style.display = 'block';
            (closeIcon as HTMLElement).style.display = 'none';
          }
        });

        // Close mobile menu when clicking a link
        const mobileMenuLinks = mobileMenu?.querySelectorAll('a');
        mobileMenuLinks?.forEach(link => {
          link.addEventListener('click', function() {
            mobileMenu?.classList.add('hidden');
            (menuIcon as HTMLElement).style.display = 'block';
            (closeIcon as HTMLElement).style.display = 'none';
          });
        });
      });
    </script>
