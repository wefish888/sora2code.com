---
import BaseLayout from '../../components/layout/BaseLayout.astro';
import { guideContent } from '../../i18n/content/guide';

const content = guideContent.zh;
---

<BaseLayout title="使用指南 - Sora2Code">
	<!-- Hero Section -->
	<div class="relative overflow-hidden bg-gradient-to-br from-purple-600 via-pink-500 to-blue-600 dark:from-purple-900 dark:via-pink-900 dark:to-blue-900 pb-20">
		<div class="absolute inset-0 opacity-10">
			<div class="absolute inset-0" style="background-image: radial-gradient(circle at 25% 25%, rgba(255,255,255,0.2) 2%, transparent 0%), radial-gradient(circle at 75% 75%, rgba(255,255,255,0.2) 2%, transparent 0%); background-size: 60px 60px;"></div>
		</div>

		<div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16 sm:py-20 text-center z-10">
			<div class="inline-flex items-center gap-2 bg-white/10 backdrop-blur-sm border border-white/20 rounded-full px-4 py-2 mb-6">
				<span class="text-2xl">📖</span>
				<span class="text-white text-sm font-medium">{content.badge}</span>
			</div>

			<h1 class="text-4xl sm:text-5xl font-extrabold text-white mb-4">
				{content.title}
			</h1>
			<p class="text-xl text-white/90 max-w-2xl mx-auto mb-8">
				{content.subtitle}
			</p>
		</div>

		<div class="absolute bottom-0 left-0 right-0 z-0">
			<svg viewBox="0 0 1440 120" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full h-auto">
				<path d="M0 120L60 105C120 90 240 60 360 45C480 30 600 30 720 37.5C840 45 960 60 1080 67.5C1200 75 1320 75 1380 75L1440 75V120H1380C1320 120 1200 120 1080 120C960 120 840 120 720 120C600 120 480 120 360 120C240 120 120 120 60 120H0Z" fill="currentColor" class="text-gray-50 dark:text-gray-900"/>
			</svg>
		</div>
	</div>

	<div class="max-w-4xl mx-auto px-4 py-12">
		<!-- Quick Start Section -->
		<section class="mb-16">
			<div class="bg-white dark:bg-gray-800 rounded-2xl p-8 shadow-lg border border-gray-100 dark:border-gray-700">
				<div class="flex items-center gap-3 mb-6">
					<div class="bg-gradient-to-br from-purple-500 to-pink-500 rounded-xl p-3">
						<span class="text-3xl">🚀</span>
					</div>
					<h2 class="text-2xl font-bold text-gray-900 dark:text-white">{content.quickStart.title}</h2>
				</div>
				<div class="space-y-6">
					{content.quickStart.steps.map((step, index) => {
						const colors = [
							{ from: 'purple-400', to: 'pink-400', gradient: 'purple-500', gradientTo: 'pink-500' },
							{ from: 'blue-400', to: 'cyan-400', gradient: 'blue-500', gradientTo: 'cyan-500' },
							{ from: 'green-400', to: 'emerald-400', gradient: 'green-500', gradientTo: 'emerald-500' },
							{ from: 'orange-400', to: 'red-400', gradient: 'orange-500', gradientTo: 'red-500' }
						];
						const color = colors[index];
						return (
							<div class="relative group">
								<div class={`absolute inset-0 bg-gradient-to-br from-${color.from} to-${color.to} rounded-xl blur opacity-20 group-hover:opacity-30 transition-opacity`}></div>
								<div class="relative flex items-start gap-4 bg-gray-50 dark:bg-gray-700 rounded-xl p-4">
									<div class={`bg-gradient-to-br from-${color.gradient} to-${color.gradientTo} text-white rounded-full w-8 h-8 flex items-center justify-center text-sm font-bold flex-shrink-0`}>{step.number}</div>
									<div>
										<h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-1">{step.title}</h3>
										<p class="text-gray-600 dark:text-gray-300">{step.description}</p>
									</div>
								</div>
							</div>
						);
					})}
				</div>
			</div>
		</section>

		<!-- How to Redeem -->
		<section class="mb-16">
			<div class="bg-white dark:bg-gray-800 rounded-2xl p-8 shadow-lg border border-gray-100 dark:border-gray-700">
				<div class="flex items-center gap-3 mb-6">
					<div class="bg-gradient-to-br from-blue-500 to-cyan-500 rounded-xl p-3">
						<span class="text-3xl">🎬</span>
					</div>
					<h2 class="text-2xl font-bold text-gray-900 dark:text-white">{content.howToRedeem.title}</h2>
				</div>

				<div class="relative overflow-hidden rounded-xl">
					<div class="absolute inset-0 bg-gradient-to-br from-purple-600 via-pink-600 to-blue-600 opacity-10"></div>
					<div class="relative border border-purple-200 dark:border-purple-800 rounded-xl p-6">
						<h3 class="text-lg font-semibold text-purple-600 dark:text-purple-400 mb-4 flex items-center gap-2">
							<span class="text-2xl">🌐</span> {content.howToRedeem.platformTitle}
						</h3>
						<ol class="space-y-3 text-gray-700 dark:text-gray-300">
							{content.howToRedeem.steps.map((step, index) => (
								<li class="flex items-start gap-3">
									<span class="bg-purple-100 dark:bg-purple-900 text-purple-600 dark:text-purple-400 rounded-full w-6 h-6 flex items-center justify-center text-sm font-bold flex-shrink-0">{index + 1}</span>
									<span set:html={step.includes('sora.openai.com') ? step.replace('sora.openai.com', '<code class="px-2 py-1 bg-purple-100 dark:bg-purple-900 text-purple-600 dark:text-purple-400 rounded font-mono text-sm">sora.openai.com</code>').replace('E9QPCR', '<code class="px-2 py-1 bg-green-100 dark:bg-green-900 text-green-600 dark:text-green-400 rounded font-mono text-sm">E9QPCR</code>') : step}></span>
								</li>
							))}
						</ol>
						<div class="mt-6 p-4 bg-blue-50 dark:bg-blue-900/30 border border-blue-200 dark:border-blue-800 rounded-lg">
							<p class="text-sm text-blue-700 dark:text-blue-300 flex items-start gap-2">
								<span class="text-xl">💡</span>
								<span><strong>{content.howToRedeem.tip}</strong> {content.howToRedeem.tipContent}</span>
							</p>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- What is Sora -->
		<section class="mb-16">
			<div class="bg-white dark:bg-gray-800 rounded-2xl p-8 shadow-lg border border-gray-100 dark:border-gray-700">
				<div class="flex items-center gap-3 mb-6">
					<div class="bg-gradient-to-br from-green-500 to-emerald-500 rounded-xl p-3">
						<span class="text-3xl">🎥</span>
					</div>
					<h2 class="text-2xl font-bold text-gray-900 dark:text-white">{content.whatIsSora.title}</h2>
				</div>
				<div class="space-y-6">
					<p class="text-gray-600 dark:text-gray-300 leading-relaxed">
						<strong class="text-gray-900 dark:text-white">Sora</strong> {content.whatIsSora.description1.replace('Sora', '')}
					</p>
					<div class="grid md:grid-cols-2 gap-6">
						<div class="bg-gradient-to-br from-purple-50 to-pink-50 dark:from-purple-900/20 dark:to-pink-900/20 rounded-xl p-6 border border-purple-100 dark:border-purple-800">
							<h3 class="text-lg font-semibold text-purple-600 dark:text-purple-400 mb-4 flex items-center gap-2">
								<span class="text-xl">✨</span> {content.whatIsSora.keyFeatures.title}
							</h3>
							<ul class="space-y-2 text-sm text-gray-700 dark:text-gray-300">
								{content.whatIsSora.keyFeatures.features.map((feature) => (
									<li class="flex items-start gap-2">
										<span class="text-purple-500">•</span>
										<span>{feature}</span>
									</li>
								))}
							</ul>
						</div>
						<div class="bg-gradient-to-br from-blue-50 to-cyan-50 dark:from-blue-900/20 dark:to-cyan-900/20 rounded-xl p-6 border border-blue-100 dark:border-blue-800">
							<h3 class="text-lg font-semibold text-blue-600 dark:text-blue-400 mb-4 flex items-center gap-2">
								<span class="text-xl">🎯</span> {content.whatIsSora.useCases.title}
							</h3>
							<ul class="space-y-2 text-sm text-gray-700 dark:text-gray-300">
								{content.whatIsSora.useCases.cases.map((useCase) => (
									<li class="flex items-start gap-2">
										<span class="text-blue-500">•</span>
										<span>{useCase}</span>
									</li>
								))}
							</ul>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- FAQ -->
		<section class="mb-16">
			<div class="bg-white dark:bg-gray-800 rounded-2xl p-8 shadow-lg border border-gray-100 dark:border-gray-700">
				<div class="flex items-center gap-3 mb-6">
					<div class="bg-gradient-to-br from-orange-500 to-red-500 rounded-xl p-3">
						<span class="text-3xl">❓</span>
					</div>
					<h2 class="text-2xl font-bold text-gray-900 dark:text-white">{content.faq.title}</h2>
				</div>
				<div class="space-y-4">
					{content.faq.questions.map((item, index) => {
						const colors = ['purple', 'blue', 'green', 'orange', 'pink'];
						const color = colors[index % colors.length];
						return (
							<div class={`border-l-4 border-${color}-500 dark:border-${color}-400 pl-6 py-2`}>
								<h3 class="font-semibold text-gray-900 dark:text-white mb-2">{item.question}</h3>
								<p class="text-gray-600 dark:text-gray-300">{item.answer}</p>
							</div>
						);
					})}
				</div>
			</div>
		</section>

		<!-- Usage Tips -->
		<section>
			<div class="bg-white dark:bg-gray-800 rounded-2xl p-8 shadow-lg border border-gray-100 dark:border-gray-700">
				<div class="flex items-center gap-3 mb-6">
					<div class="bg-gradient-to-br from-yellow-500 to-orange-500 rounded-xl p-3">
						<span class="text-3xl">💡</span>
					</div>
					<h2 class="text-2xl font-bold text-gray-900 dark:text-white">{content.tips.title}</h2>
				</div>
				<div class="grid md:grid-cols-2 gap-6">
					<div class="bg-gradient-to-br from-green-50 to-emerald-50 dark:from-green-900/20 dark:to-emerald-900/20 rounded-xl p-6 border border-green-100 dark:border-green-800">
						<h3 class="text-lg font-semibold text-green-600 dark:text-green-400 mb-4 flex items-center gap-2">
							<span class="text-xl">✅</span> {content.tips.bestPractices.title}
						</h3>
						<ul class="space-y-2 text-sm text-gray-700 dark:text-gray-300">
							{content.tips.bestPractices.items.map((item) => (
								<li class="flex items-start gap-2">
									<span class="text-green-500">•</span>
									<span>{item}</span>
								</li>
							))}
						</ul>
					</div>
					<div class="bg-gradient-to-br from-red-50 to-pink-50 dark:from-red-900/20 dark:to-pink-900/20 rounded-xl p-6 border border-red-100 dark:border-red-800">
						<h3 class="text-lg font-semibold text-red-600 dark:text-red-400 mb-4 flex items-center gap-2">
							<span class="text-xl">❌</span> {content.tips.thingsToAvoid.title}
						</h3>
						<ul class="space-y-2 text-sm text-gray-700 dark:text-gray-300">
							{content.tips.thingsToAvoid.items.map((item) => (
								<li class="flex items-start gap-2">
									<span class="text-red-500">•</span>
									<span>{item}</span>
								</li>
							))}
						</ul>
					</div>
				</div>
			</div>
		</section>
	</div>
</BaseLayout>
