---
import BaseLayout from '../components/layout/BaseLayout.astro';
import { faqContent } from '../i18n/content/faq';

const content = faqContent.en;

// Color schemes for different sections
const colors = ['blue', 'green', 'purple', 'orange', 'red', 'yellow', 'indigo', 'pink', 'cyan', 'amber', 'teal', 'rose', 'violet'];
---

<BaseLayout
  title="FAQ - Sora2Code"
  description="Frequently asked questions about Sora invite codes, redemption process, and troubleshooting."
>
	<!-- Hero Section -->
	<div class="relative overflow-hidden bg-gradient-to-br from-purple-600 via-pink-500 to-blue-600 dark:from-purple-900 dark:via-pink-900 dark:to-blue-900 pb-20">
		<div class="absolute inset-0 opacity-10">
			<div class="absolute inset-0" style="background-image: radial-gradient(circle at 25% 25%, rgba(255,255,255,0.2) 2%, transparent 0%), radial-gradient(circle at 75% 75%, rgba(255,255,255,0.2) 2%, transparent 0%); background-size: 60px 60px;"></div>
		</div>

		<div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16 sm:py-20 text-center z-10">
			<div class="inline-flex items-center gap-2 bg-white/10 backdrop-blur-sm border border-white/20 rounded-full px-4 py-2 mb-6">
				<span class="text-2xl">‚ùì</span>
				<span class="text-white text-sm font-medium">{content.badge}</span>
			</div>

			<h1 class="text-4xl sm:text-5xl font-extrabold text-white mb-4">
				{content.title}
			</h1>
			<p class="text-xl text-white/90 max-w-2xl mx-auto mb-8">
				{content.subtitle}
			</p>
		</div>

		<div class="absolute bottom-0 left-0 right-0 z-0">
			<svg viewBox="0 0 1440 120" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full h-auto">
				<path d="M0 120L60 105C120 90 240 60 360 45C480 30 600 30 720 37.5C840 45 960 60 1080 67.5C1200 75 1320 75 1380 75L1440 75V120H1380C1320 120 1200 120 1080 120C960 120 840 120 720 120C600 120 480 120 360 120C240 120 120 120 60 120H0Z" fill="currentColor" class="text-gray-50 dark:text-gray-900"/>
			</svg>
		</div>
	</div>

	<div class="max-w-4xl mx-auto px-4 py-12">
		<!-- Basic Questions -->
		<section class="mb-16">
			<div class="bg-white dark:bg-gray-800 rounded-2xl p-8 shadow-lg border border-gray-100 dark:border-gray-700">
				<div class="flex items-center gap-3 mb-6">
					<div class="bg-gradient-to-br from-purple-500 to-pink-500 rounded-xl p-3">
						<span class="text-3xl">üîß</span>
					</div>
					<h2 class="text-2xl font-bold text-gray-900 dark:text-white">{content.basicQuestions.title}</h2>
				</div>
				<div class="space-y-6">
					{content.basicQuestions.items.map((item, index) => (
						<div class={`border-l-4 border-${colors[index]}-500 dark:border-${colors[index]}-400 pl-6 py-2`}>
							<h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">{item.question}</h3>
							<p class="text-gray-600 dark:text-gray-300 leading-relaxed {item.sources ? 'mb-2' : ''}">{item.answer}</p>
							{item.sources && (
								<ul class="ml-4 space-y-1 text-gray-600 dark:text-gray-300">
									{item.sources.map((source) => (
										<li class="flex items-start gap-2">
											<span class={`text-${colors[index]}-500`}>‚Ä¢</span>
											<span>{source}</span>
										</li>
									))}
								</ul>
							)}
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- Usage Questions -->
		<section class="mb-16">
			<div class="bg-white dark:bg-gray-800 rounded-2xl p-8 shadow-lg border border-gray-100 dark:border-gray-700">
				<div class="flex items-center gap-3 mb-6">
					<div class="bg-gradient-to-br from-blue-500 to-cyan-500 rounded-xl p-3">
						<span class="text-3xl">üé¨</span>
					</div>
					<h2 class="text-2xl font-bold text-gray-900 dark:text-white">{content.usageQuestions.title}</h2>
				</div>
				<div class="space-y-6">
					{content.usageQuestions.items.map((item, index) => (
						<div class={`border-l-4 border-${colors[index + 3]}-500 dark:border-${colors[index + 3]}-400 pl-6 py-2`}>
							<h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">{item.question}</h3>
							<p class="text-gray-600 dark:text-gray-300 leading-relaxed {item.steps ? 'mb-2' : ''}">{item.answer}</p>
							{item.steps && (
								<ul class="ml-4 space-y-1 text-gray-600 dark:text-gray-300">
									{item.steps.map((step) => (
										<li class="flex items-start gap-2">
											<span class={`text-${colors[index + 3]}-500`}>‚Ä¢</span>
											<span>{step}</span>
										</li>
									))}
								</ul>
							)}
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- Platform Questions -->
		<section class="mb-16">
			<div class="bg-white dark:bg-gray-800 rounded-2xl p-8 shadow-lg border border-gray-100 dark:border-gray-700">
				<div class="flex items-center gap-3 mb-6">
					<div class="bg-gradient-to-br from-green-500 to-emerald-500 rounded-xl p-3">
						<span class="text-3xl">üåê</span>
					</div>
					<h2 class="text-2xl font-bold text-gray-900 dark:text-white">{content.platformQuestions.title}</h2>
				</div>
				<div class="space-y-6">
					{content.platformQuestions.items.map((item, index) => (
						<div class={`border-l-4 border-${colors[index]}-500 dark:border-${colors[index]}-400 pl-6 py-2`}>
							<h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">{item.question}</h3>
							<p class="text-gray-600 dark:text-gray-300 leading-relaxed {item.devices || item.requirements ? 'mb-2' : ''}">{item.answer}</p>
							{item.devices && (
								<ul class="ml-4 space-y-1 text-gray-600 dark:text-gray-300">
									{item.devices.map((device) => (
										<li class="flex items-start gap-2">
											<span class={`text-${colors[index]}-500`}>‚Ä¢</span>
											<span>{device}</span>
										</li>
									))}
								</ul>
							)}
							{item.requirements && (
								<ul class="ml-4 space-y-1 text-gray-600 dark:text-gray-300">
									{item.requirements.map((req) => (
										<li class="flex items-start gap-2">
											<span class={`text-${colors[index]}-500`}>‚Ä¢</span>
											<span>{req}</span>
										</li>
									))}
								</ul>
							)}
							{item.note && (
								<p class="text-gray-600 dark:text-gray-300 mt-2">{item.note}</p>
							)}
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- Website Questions -->
		<section class="mb-16">
			<div class="bg-white dark:bg-gray-800 rounded-2xl p-8 shadow-lg border border-gray-100 dark:border-gray-700">
				<div class="flex items-center gap-3 mb-6">
					<div class="bg-gradient-to-br from-orange-500 to-red-500 rounded-xl p-3">
						<span class="text-3xl">üíª</span>
					</div>
					<h2 class="text-2xl font-bold text-gray-900 dark:text-white">{content.websiteQuestions.title}</h2>
				</div>
				<div class="space-y-6">
					{content.websiteQuestions.items.map((item, index) => (
						<div class={`border-l-4 border-${colors[index + 6]}-500 dark:border-${colors[index + 6]}-400 pl-6 py-2`}>
							<h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">{item.question}</h3>
							<p class="text-gray-600 dark:text-gray-300 leading-relaxed {item.methods || item.safety ? 'mb-2' : ''}">{item.answer}</p>
							{item.methods && (
								<ul class="ml-4 space-y-1 text-gray-600 dark:text-gray-300">
									{item.methods.map((method) => (
										<li class="flex items-start gap-2">
											<span class={`text-${colors[index + 6]}-500`}>‚Ä¢</span>
											<span>{method}</span>
										</li>
									))}
								</ul>
							)}
							{item.safety && (
								<ul class="ml-4 space-y-1 text-gray-600 dark:text-gray-300">
									{item.safety.map((safe) => (
										<li class="flex items-start gap-2">
											<span class={`text-${colors[index + 6]}-500`}>‚Ä¢</span>
											<span>{safe}</span>
										</li>
									))}
								</ul>
							)}
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- Other Questions -->
		<section class="mb-16">
			<div class="bg-white dark:bg-gray-800 rounded-2xl p-8 shadow-lg border border-gray-100 dark:border-gray-700">
				<div class="flex items-center gap-3 mb-6">
					<div class="bg-gradient-to-br from-yellow-500 to-orange-500 rounded-xl p-3">
						<span class="text-3xl">üí°</span>
					</div>
					<h2 class="text-2xl font-bold text-gray-900 dark:text-white">{content.otherQuestions.title}</h2>
				</div>
				<div class="space-y-6">
					{content.otherQuestions.items.map((item, index) => (
						<div class={`border-l-4 border-${colors[index + 9]}-500 dark:border-${colors[index + 9]}-400 pl-6 py-2`}>
							<h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">{item.question}</h3>
							<p class="text-gray-600 dark:text-gray-300 leading-relaxed {item.creations ? 'mb-2' : ''}">{item.answer}</p>
							{item.creations && (
								<ul class="ml-4 space-y-1 text-gray-600 dark:text-gray-300">
									{item.creations.map((creation) => (
										<li class="flex items-start gap-2">
											<span class={`text-${colors[index + 9]}-500`}>‚Ä¢</span>
											<span>{creation}</span>
										</li>
									))}
								</ul>
							)}
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- Contact Banner -->
		<div class="relative overflow-hidden rounded-2xl">
			<div class="absolute inset-0 bg-gradient-to-br from-purple-600 via-pink-600 to-blue-600"></div>
			<div class="absolute inset-0 opacity-20">
				<div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width=&quot;60&quot; height=&quot;60&quot; viewBox=&quot;0 0 60 60&quot; xmlns=&quot;http://www.w3.org/2000/svg&quot;%3E%3Cg fill=&quot;none&quot; fill-rule=&quot;evenodd&quot;%3E%3Cg fill=&quot;%23ffffff&quot; fill-opacity=&quot;0.4&quot;%3E%3Cpath d=&quot;M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z&quot;/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
			</div>
			<div class="relative px-8 py-12 text-center">
				<h3 class="text-2xl font-bold text-white mb-3">{content.contactBanner.title}</h3>
				<p class="text-white/90 mb-6 max-w-xl mx-auto">{content.contactBanner.description}</p>
				<a href="mailto:support@sora2code.com" class="inline-flex items-center gap-2 px-8 py-4 bg-white text-purple-600 font-bold rounded-xl shadow-xl hover:shadow-2xl transform hover:-translate-y-1 transition-all duration-200">
					<span class="text-xl">üìß</span>
					{content.contactBanner.buttonText}
				</a>
			</div>
		</div>
	</div>
</BaseLayout>
