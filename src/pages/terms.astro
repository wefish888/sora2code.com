---
import BaseLayout from '../components/layout/BaseLayout.astro';
import { termsContent } from '../i18n/content/terms';

const content = termsContent.en;

// Emoji mapping for sections
const emojiMap: Record<string, string> = {
  'acceptance': 'ğŸ“‹',
  'service': 'ğŸ®',
  'responsibilities': 'ğŸ‘¤',
  'intellectual': 'âš–ï¸',
  'availability': 'ğŸŒ',
  'disclaimers': 'âš ï¸',
  'liability': 'ğŸ›¡ï¸',
  'termination': 'ğŸšª',
  'changes': 'ğŸ“',
  'governing': 'ğŸ›ï¸',
  'contact': 'ğŸ“§'
};
---

<BaseLayout
  title="Terms of Service - sora2code"
  description="Terms of Service for Sora2Code.com. Read our terms and conditions for using our invite code service."
>
	<div class="max-w-4xl mx-auto px-4 py-8">
		<!-- Page title -->
		<div class="text-center mb-12">
			<h1 class="text-4xl font-bold text-white mb-4">âš–ï¸ {content.title}</h1>
			<p class="text-xl text-gray-300">{content.subtitle}</p>
			<p class="text-sm text-gray-400 mt-4">{content.lastUpdated}</p>
		</div>

		<!-- Terms content -->
		<div class="space-y-8">
			{content.sections.map((section) => (
				<section class="bg-gray-800 rounded-lg p-6">
					<h2 class="text-2xl font-bold text-white mb-6 flex items-center">
						{emojiMap[section.id] || 'ğŸ“„'} <span class="ml-2">{section.title}</span>
					</h2>
					<div class="space-y-4 text-gray-300">
						{section.content && section.content.map((paragraph) => (
							<p>{paragraph}</p>
						))}

						{section.list && (
							<ul class="list-disc ml-6 space-y-2">
								{section.list.map((item) => (
									<li>{item}</li>
								))}
							</ul>
						)}

						{section.sections && section.sections.map((subsection) => (
							<p>
								<strong>{subsection.subtitle}</strong> {subsection.content}
							</p>
						))}

						{section.items && section.items.map((item) => (
							<p>
								<strong>{item.subtitle}</strong> {item.content}
							</p>
						))}

						{section.footer && (
							<p class="mt-4">{section.footer}</p>
						)}

						{section.contact && (
							<div class="mt-4">
								<p class="mb-2">Email: <a href={`mailto:${section.contact.email}`} class="text-purple-400 hover:text-purple-300">{section.contact.email}</a></p>
								<p>Subject: {section.contact.subject}</p>
							</div>
						)}
					</div>
				</section>
			))}
		</div>

		<!-- Agreement acknowledgment -->
		<div class="mt-12 bg-gradient-to-r from-purple-900 to-blue-900 rounded-lg p-6 text-center">
			<h3 class="text-xl font-bold text-white mb-3">{content.agreement.title}</h3>
			<p class="text-gray-300">{content.agreement.content}</p>
		</div>
	</div>
</BaseLayout>
