# Environment Configuration
NODE_ENV=development
PORT=3006

# Database Configuration (SQLite)
DATABASE_URL="file:./dev.db"

# Redis Configuration (Optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
