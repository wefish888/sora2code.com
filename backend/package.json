{
  "name": "sora2code-backend",
  "version": "1.0.0",
  "description": "Sora2Code.com - sora2 invite code Collection Backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "dev:setup": "ts-node scripts/dev.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "ts-node prisma/seed.ts",
    "db:setup": "ts-node scripts/setup-db.ts",
    "db:reset": "prisma migrate reset --force",
    "docker:build": "docker build -t sora2code-backend .",
    "docker:run": "docker run -p 3000:3000 --env-file .env.production sora2code-backend",
    "deploy": "chmod +x deploy.sh && ./deploy.sh",
    "deploy:staging": "chmod +x deploy.sh && ./deploy.sh staging",
    "logs": "docker-compose logs -f",
    "stop": "docker-compose down",
    "restart": "docker-compose restart",
    "health": "curl -f http://localhost:3000/health || exit 1",
    "workers:dev": "wrangler dev",
    "workers:deploy": "wrangler deploy",
    "workers:tail": "wrangler tail",
    "d1:create": "wrangler d1 create sora2code",
    "d1:migrate": "wrangler d1 execute sora2code --file=schema.sql",
    "d1:query": "wrangler d1 execute sora2code --command"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.0",
    "@hono/zod-validator": "^0.2.2",
    "@prisma/client": "^5.6.0",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "hono": "^4.3.11",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-fetch": "^2.7.0",
    "nodemailer": "^6.9.7",
    "rate-limiter-flexible": "^2.4.2",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.4",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.7",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.7",
    "@types/node": "^20.8.7",
    "@types/nodemailer": "^6.4.13",
    "@types/supertest": "^2.0.15",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prisma": "^5.6.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "wrangler": "^3.57.0"
  },
  "keywords": [
    "sora",
    "openai",
    "invite-codes",
    "api",
    "nodejs",
    "express"
  ],
  "author": "Sora2Code Team",
  "license": "MIT"
}
