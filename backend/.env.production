# Production Environment Configuration
NODE_ENV=production
PORT=3000

# Database Configuration (Production)
DATABASE_URL="file:./production.db"

# Redis Configuration (Production)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration (Production - Use strong secrets)
JWT_SECRET=your-production-jwt-secret-key-here-make-it-very-long-and-random
JWT_REFRESH_SECRET=your-production-refresh-secret-key-different-from-jwt-secret
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration (Production)
ALLOWED_ORIGINS=https://sora2code.com,https://www.sora2code.com

# Rate Limiting (Production)
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Email Configuration (Production SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-production-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=support@sora2code.com

# Frontend URL (Production)
FRONTEND_URL=https://sora2code.com

# Reddit Integration (Production)
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USER_AGENT=sora2code/1.0.0 (https://sora2code.com)
REDDIT_USERNAME=your-reddit-username
REDDIT_PASSWORD=your-reddit-password
REDDIT_SUBREDDIT=Borderlands
REDDIT_CHECK_INTERVAL=30

# Logging (Production)
LOG_LEVEL=warn
LOG_MAX_FILES=30d
LOG_MAX_SIZE=50m

# Security (Production)
BCRYPT_ROUNDS=12

# Feature Flags (Production)
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_REDDIT_MONITORING=true

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=We are currently performing maintenance. Please check back soon.

# SSL/HTTPS (if using HTTPS)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem